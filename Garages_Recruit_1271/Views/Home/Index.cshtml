@model IEnumerable<User>
@inject SignInManager<ApplicationUser> signInManager
@{
    ViewBag.Title = "User List";
    var phtoPath = "~/images/Delek.png";
}

<div class="row justify-content-center m-0">
    @if (signInManager.IsSignedIn(User))
    {
        <div class="card-deck">
            @foreach (var user in Model)
            {
                phtoPath = "~/images/" + (user.PhotoPath ?? "Delek.png");
                <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
                    <div class="card-header">
                        <h3>@user.Name</h3>
                    </div>
                    <img class="card-img-top imageThumbnail" src="@phtoPath" asp-append-version="true" />
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="details" asp-route-id="@user.EncryptedId" class="btn btn-primary m-1">View</a>
                        <a asp-action="edit" asp-controller="home" asp-route-id="@user.Id" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">

            <div class="card-body text-center">
                <img class="card-img-top" src="@phtoPath" asp-append-version="true" />

            </div>

        </div>
    }

</div>




